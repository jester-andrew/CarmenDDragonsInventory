<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/Color"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/itemimage"
        app:layout_constraintTop_toBottomOf="@+id/itemtag"
        tools:text="Color" />

    <TextView
        android:id="@+id/itemtag"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/itemimage"
        app:layout_constraintTop_toBottomOf="@+id/nametag"
        tools:text="Item Held" />

    <TextView
        android:id="@+id/nametag"
        android:layout_width="83dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="name"
        app:layout_constraintStart_toEndOf="@+id/itemimage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <ImageView
        android:id="@+id/itemimage"
        android:layout_width="183dp"
        android:layout_height="127dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_light" />

    <EditText
        android:id="@+id/inStock"
        android:layout_width="69dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Number In Stock"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/nametag"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="stock" />

    <EditText
        android:id="@+id/listPrice"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/Color"
        app:layout_constraintTop_toBottomOf="@+id/CostToProduce" />

    <EditText
        android:id="@+id/CostToProduce"
        android:layout_width="67dp"
        android:layout_height="21dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/itemtag"
        app:layout_constraintTop_toBottomOf="@+id/inStock" />

</android.support.constraint.ConstraintLayout>